<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical" android:layout_width="match_parent"

    android:layout_height="match_parent"

    android:weightSum="1">



    <TextView

        android:id="@+id/textaddreseaux"

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:layout_weight="0.04"

        android:text="Créer un réseaux"

        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />



    <RelativeLayout

        android:layout_width="match_parent"

        android:layout_height="477dp">



        <Button

            android:id="@+id/buttonvalid"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"

            android:layout_alignParentEnd="true"

            android:layout_alignParentRight="true"

            android:text="Valider" />



        <EditText

            android:id="@+id/editNomreseau"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"

            android:layout_alignParentRight="true"

            android:layout_alignParentTop="true"

            android:layout_marginEnd="35dp"

            android:layout_marginRight="35dp"

            android:layout_marginTop="34dp"

            android:ems="10"

            android:inputType="textPersonName"

            android:selectAllOnFocus="true" />



        <Spinner

            android:id="@+id/spinnercategories"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_alignEnd="@+id/editNomreseau"

            android:layout_alignLeft="@+id/editNomreseau"

            android:layout_alignRight="@+id/editNomreseau"

            android:layout_alignStart="@+id/editNomreseau"

            android:layout_below="@+id/editNomreseau"

            android:layout_marginTop="35dp" />



        <TextView

            android:id="@+id/textView7"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_alignBaseline="@+id/editNomreseau"

            android:layout_alignBottom="@+id/editNomreseau"

            android:layout_toLeftOf="@+id/editNomreseau"

            android:layout_toStartOf="@+id/editNomreseau"

            android:text="Nom du réseau"

            android:textAppearance="@style/TextAppearance.AppCompat" />



        <TextView

            android:id="@+id/textView8"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_alignLeft="@+id/textView7"

            android:layout_alignStart="@+id/textView7"

            android:layout_alignTop="@+id/spinnercategories"

            android:layout_toLeftOf="@+id/spinnercategories"

            android:text="Categorie"

            android:textAppearance="@style/TextAppearance.AppCompat" />



        <TextView

            android:id="@+id/invitres"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_above="@+id/rginvit"

            android:layout_alignLeft="@+id/textView8"

            android:layout_alignStart="@+id/textView8"

            android:text="Type réseau:"

            android:textAppearance="@style/TextAppearance.AppCompat" />



        <RadioGroup

            android:id="@+id/rginvit"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_above="@+id/buttonvalid"

            android:layout_alignLeft="@+id/invitres"

            android:layout_alignStart="@+id/invitres"

            android:layout_marginBottom="73dp">



            <RadioButton

                android:id="@+id/radioButtonPublic"

                style="@style/Widget.AppCompat.CompoundButton.RadioButton"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:layout_alignParentLeft="true"

                android:layout_alignParentStart="true"

                android:layout_weight="1"

                android:checked="true"

                android:text="Public" />



            <RadioButton

                android:id="@+id/radioButtonPrivé"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:layout_alignTop="@+id/radioButtonDemande"

                android:layout_toEndOf="@+id/radioButtonDemande"

                android:layout_toRightOf="@+id/radioButtonDemande"

                android:layout_weight="1"

                android:text="Privé" />



        </RadioGroup>



        <TextView

            android:id="@+id/TextVille"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_below="@+id/spinnercategories"

            android:layout_marginTop="39dp"

            android:text="TextView"

            android:textAppearance="@style/TextAppearance.AppCompat.Body1"

            android:layout_alignLeft="@+id/textView8"

            android:layout_alignStart="@+id/textView8"

            android:layout_alignRight="@+id/spinnercategories"

            android:layout_alignEnd="@+id/spinnercategories" />



    </RelativeLayout>



</LinearLayout>